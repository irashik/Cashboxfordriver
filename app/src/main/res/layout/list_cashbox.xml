<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    card_view:cardElevation="@dimen/_2sdp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding1">

        <TextView
            android:id="@+id/payment_sum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/paymentsum"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/payment_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="@string/paymenttype"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/payment_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="@string/paymenttime"
            android:textColor="@color/colorBlack"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/edit_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:src="@drawable/pedit"/>

        <ImageView
            android:id="@+id/delete_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:contentDescription="@string/app_name"
            android:src="@drawable/pdelete"/>

    </LinearLayout>
</android.support.v7.widget.CardView>